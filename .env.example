# API Settings
# ====================

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-instance.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
AZURE_EMBEDDING_DEPLOYMENT_NAME=your-embedding-deployment

# Azure Storage
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-account;AccountKey=your-key;EndpointSuffix=core.windows.net
DOCUMENTS_CONTAINER_NAME=financial-documents

# Authentication
JWT_SECRET_KEY=your-super-secret-key-min-32-chars
JWT_ALGORITHM=HS256
TOKEN_EXPIRE_MINUTES=480  # 8 hours

# Vector Database (Qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6333
COLLECTION_NAME=financial_docs
VECTOR_SIZE=1536  # OpenAI embedding size

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# API Server
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False
ENVIRONMENT=development  # development, staging, production

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Document Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=100
MAX_DOCUMENTS=10
SIMILARITY_THRESHOLD=0.7

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour

# Frontend Settings
# ====================

# API Connection
VITE_API_URL=http://localhost:8000
VITE_API_TIMEOUT=30000
VITE_WEBSOCKET_URL=ws://localhost:8000/ws

# Feature Flags
VITE_ENABLE_STREAMING=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_DARK_MODE=true

# UI Configuration
VITE_MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
VITE_SUPPORTED_FILE_TYPES=.txt,.pdf,.doc,.docx
VITE_DEFAULT_THEME=light

# Analytics
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=your-analytics-id

# Error Reporting
VITE_ENABLE_ERROR_REPORTING=false
VITE_SENTRY_DSN=your-sentry-dsn

# Cache Settings
VITE_CACHE_DURATION=3600000  # 1 hour in milliseconds
VITE_ENABLE_SERVICE_WORKER=false

# Development Tools
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_DEBUG_LOGGING=true

# User Interface
VITE_PAGE_SIZE=20
VITE_MAX_RECENT_SEARCHES=5
VITE_TYPING_INDICATOR_DELAY=300
VITE_RESPONSE_STREAM_CHUNK_SIZE=2

# Security
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true
VITE_SECURE_COOKIES=true

# PWA Settings